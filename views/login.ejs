<body>
    <!-- Login -->
    <section id="login" class=" register-form" >
        <div class="container">
            <div class="row">
                <!-- Column-1 -->
                <div class="col-lg-3">
                    
                </div>
                <!-- End Column-1 -->

                <!-- Column-2 -->
                <div class="col-lg-6 bglogin p-4" style="margin-top: 60px;">
                    <form action="/verifyLogin" method="post">
                        <!-- logo -->
                        <center>
                            <img class="mb-4 rounded-circle" src="https://capstan.ctscentral.net/img/user-icon.png" alt="logo" width="20%" style="background-color: rgb(6, 144, 198); padding: 10px;"
                                height="20%">
                        </center>

                        <!-- Heading (Login) -->
                        <h1 class="mb-5 text-center text-primary">Login</h1>

                        <% if(message.length> 0) { %>
                            <div class="alert alert-danger">
                                <!-- To print message -->
                                <%= message %>
                            </div>
                            <% } %>

                                <% if(msg.length> 0) { %>
                                    <div class="alert alert-danger">
                                        <!-- To print message -->
                                        <%= msg %>
                                    </div>
                                    <% } %>


                                        <!-- Email -->
                                        <div class="row mb-3">
                                            <div
                                                class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2">
                                                Email</div>
                                            <div class="col-lg-10">
                                                <input name="email" class="form-control" type="email" id="email"
                                                    placeholder="name@example.com" required >
                                            </div>
                                           
                                        </div>

                                        <!-- Password -->
                                        <div class="row mb-5">
                                            <div
                                                class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2">
                                                Password</div>
                                            <div class="col-lg-10">
                                                <input name="password" class="form-control" type="password" id="lock" required>
                                            </div>
                                        </div>

                                        <!-- Button (Login) -->
                                        <center>
                                            <button type="submit" class="btn btn-primary mb-5 btn-lg bg-primary">Login</button>
                                        </center>

                                        <!-- Register Now -->
                                        <center>
                                            <p class="text-uppercase " >Don't have an account? &nbsp; 
                                                <a href="./register" style="font-weight: 400;">Register Now</a></p>

                                                <!-- <a href="#" data-bs-toggle="modal" data-bs-target="#forgot">Forgot Password</a> -->

                                               
                                        </center>
                    </form>
                </div>

                <div class="col-lg-3">
                    
                </div>
                <!-- End Column-2 -->
            </div>
        </div>
    </section>

